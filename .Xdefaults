Xft.dpi: 96
Xft.antialias: 1
Xft.hinting: 1
Xft.hintstyle: hintfull
Xft.autohint: 1
Xft.rgba: none
Xft.lcdfilter: lcddefault

!! URxvt Appearance
URxvt.font: xft:Hack:size=12:style=Regular
URxvt.boldFont: xft:Hack:size=12:style=Bold
URxvt.italicFont: xft:Hack:size=12:style=Italic
URxvt.boldItalicfont: xft:Hack:size=12:style=Bold Italic
URxvt.letterSpace: 0
URxvt.lineSpace: 0
URxvt.geometry: 92x24
URxvt.internalBorder: 5
URxvt.cursorBlink: 1
URxvt.cursorUnderline: 0
URxvt.saveline: 2048
URxvt.scrollBar: 0
URxvt.scrollBar_right: 0
URxvt.urgentOnBell: 0
URxvt.depth: 24
URxvt.iso14755: 0
URxvt.imLocale: en_US.UTF-8
URxvt.imFont: Hack
URxvt.termName: rxvt-256color
URxvt.intensityStyles: 0

!! Copy Paste & Other Extensions
URxvt.perl-ext-common: default,matcher,resize-font,url-select,clipboard,keyboard-select
URxvt.keysym.M-y: perl:url-select:select_next
URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste
URxvt.url-launcher: /usr/bin/librewolf
URxvt.matcher.button: 1
URxvt.resize-font.smaller: C-j
URxvt.resize-font.bigger: C-k
